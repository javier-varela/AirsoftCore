@model IEnumerable<Compra>




<div class="container d-flex flex-column gap-4 align-items-start" style="max-width:1024px">
    <h1>
        Compras
    </h1>

    <table class="table table-striped border shadow">
        <thead>
            <tr class="bg-primary text-white">
                <th scope="col">@Html.DisplayNameFor(m => m.FechaCompra)</th>
                <th scope="col">Cantidad Productos</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>

        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCompra)
                    </td>
                    <td class=" ">
                        @item.Productos.Count()
                    </td>

                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                No Tienes Compras
            </tr>
        }
    </table>

</div>