@model IEnumerable<Cancha>
@{
    ViewData["Title"] = "Canchas";
}
<section class="container">
    <ul class=" list-unstyled d-flex gap-3 ">


        @foreach (var item in Model)
        {
            <li>
                <div class="card" style="width: 18rem;">
                    <img height="220" src="/@item.Imagenes[0].Url" class="block object-fit-cover card-img-top" alt="...">
                    <div class="card-body">
                        <div class="card-tittle">
                            <h5 class="">@item.Nombre</h5>
                            <span class="badge bg-secondary">@item.Nombre</span>
                        <span>Precio Hora: @item.PrecioHora</span>
                        </div>
                  
                        <p>@item.Descripcion</p>
                        
                    </div>
                    <div class="card-footer"> <a asp-area="Client" asp-controller="Reservas" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary mt-3">Reservar</a></div>
                </div>

            </li>


        }
    </ul>
</section>



