@model Usuario

@{
    ViewData["Tittle"] = "Editar Categoria";
}


<h4>Editar Categoria</h4>

<form method="POST" asp-action="Edit">
    <div class="row px-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Puntos"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Puntos" class="form-control" />
                    <span asp-validation-for="Puntos" class="text-danger"></span>
                </div>
            </div>

            <partial name="_VistaGuardarVolver" />


        </div>
    </div>
</form>